---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a href={href} class="icon-link">
  <slot />
</a>

<style>
  .icon-link {
    cursor: pointer;
    width: 2.25rem;
    height: 2.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
  }

  .icon-link:hover :global(svg) {
    color: var(--foreground);
  }
</style>
